<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProgramList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2"
        android:id="@+id/pgm_list"
        android:background="@drawable/button_model">


        <Button
            android:id="@+id/btnDeleteSetup"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/button_model"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            android:textColor="#14BED1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ProgramList-"
                android:textSize="25dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:id="@+id/txtProgramListTitle"
                android:textColor="#14BED1"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:text="00"
                android:textColor="#14BED1"
                />
        </LinearLayout>

        <Switch
            android:id="@+id/swtPgm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="10dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>